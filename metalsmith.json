{
  "source": "./src/contents",
  "destination": "./build",
  "metadata": {
    "title": "Concrete Metalsmith Boilerplate",
    "description": "Metalsmith boilerplate for Concrete's Static Sites"
  },
  "plugins": {
    "metalsmith-drafts": {},
    "metalsmith-markdown": {},
    "metalsmith-jade": {},
    "metalsmith-permalinks": {
      "pattern": ":title"
    },
    "metalsmith-templates": {
      "engine": "swig",
      "directory": "./src/templates"
    }
  }
}